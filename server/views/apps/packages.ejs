<% include header.ejs%>
<div id="container" style="max-width: 720px;width: 100%;padding: 20px 0px 10px 0px;">
  <div class="text-center" style="font-size:18px;">
    <div class="p-1" style="color: #003366">
      <strong>Smart Home packages that<br>fit your needs and pocket.</strong>
    </div>
    <div class="text-center" style="font-size:14px;">
      <div class="p-1" style="color: #003366">
        <p>Keep adding on new devices that are always compatible.<br>
      </div>
    </div>
  </div>
  <a href="apps/package?package=<%=data[0][0] %>">
    <div class="row" style="padding: 10px; border: 0px solid #003366; margin: auto; height: 80px; width: 400px; ">
      <div class="col-4" style="font-size: 20px; background-image: url(images/<%=data[0][0] %>.jpg); padding-top: 15px; text-align: center;">
        <span class="badge badge-primary badge-pill">$500+</span>
